
#include <iostream>
using namespace std;
int main()
{
    char menu;
    int menuint;
    double valor;

    cout << "conversor de unidades\n";
    cout << "Seleccione una opcion:\n(m)Moneda\n(d)Distancia\n(p)Peso\n";
    cin >> menu;
    switch (menu)
    {

    case 'm':
        cout << "a que moneda quieres covertir ? \n(1)dolar\n(2)bolivar\n(3)Euro\n(4)Libra\n(5)Yen\n";
        cin >> menuint;
        switch (menuint)

        {
        case '1':
            cout << "Ingrese la cantidad de dinero a converir (pesos mexcanos)";
            cin >> valor;
            cout << valor * 0.053;
            break;
        case '2':
            cout << "Ingrese la cantidad de dinero a converir (pesos mexcanos)";
            cin >> valor;
            cout << valor * 1.05;
            break;
        case '3':
            cout << "Ingrese la cantidad de dinero a converir (pesos mexcanos)";
            cin >> valor;
            cout << valor * 0.049;
            break;
        case '4':
            cout << "Ingrese la cantidad de dinero a converir (pesos mexcanos)";
            cin >> valor;
            cout << valor * 0.043;
            break;
        case '5':
            cout << "Ingrese la cantidad de dinero a converir (pesos mexcanos)";
            cin >> valor;
            cout << valor * 6.79;
            break;
        break;
        }
    case 'd':
        cout << "A que medida quieres converir \n(in)Pulgadas\n(f)Pies\n(cm)Centimetros\n(nm)Nanometros\n(al)Anos luz\n";
        cin >> menuint;
        switch (menuint);
        {
        case 'in':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 39370.0787;
            break;
        case 'f':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 3280.8;
            break;
        case 'cm':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 100000;
            break;
        case 'nm':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 1000000000000;
            break;
        case 'al':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 0.00000000000010570;
            break;
        }
        break;
    case 'p':
        cout << "A que medida quieres converir \n(ton)toneladas\n(oz)onzas\n(lb)libras\n(mc)microgramos\n(tg)Teragramos";
        cin >> menuint;
        switch (menuint);
        {
        case 'ton':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 0.001;
            break;
        case 'oz':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 35.273;
            break;
        case 'lb':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 2.240;
            break;
        case 'mc':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 1000000000;
            break;
        case 'tg':
            cout << "escribe la los kilometros a convertir:\n";
            cin >> valor;
            cout << valor * 0.0000000001;
            break;
            break;
        }
    }
}
